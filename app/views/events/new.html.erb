<div class="container">
    <h2>Create event:</h2>
    <%= form_for @event do |f| %>
       <%= f.label :name %>
       <%= f.text_field :name %>
       
       <%= f.label :location %>
       <%= f.text_field :location %>
       
       <%= f.label :date_on %>
       <%= f.date_field :date_on %>
       
       <%= f.submit 'Create event' %>
    <% end %>
</div>